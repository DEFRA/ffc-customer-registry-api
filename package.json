{
  "name": "ffc-customer-registry-api",
  "version": "1.0.22",
  "description": "Customer Registry GraphQL Service",
  "homepage": "https://github.com/DEFRA/ffc-customer-registry-api",
  "main": "app/index.js",
  "type": "module",
  "scripts": {
    "format:gql": "prettier 'app/graphql/types/**/*.gql' --write",
    "format:js": "standard --fix",
    "lint:gql": "eslint 'app/graphql/types' && prettier 'app/graphql/types/**/*.gql' --check",
    "lint:js": "standard",
    "pretest": "npm run lint:js && npm run lint:gql",
    "start:debug": "nodemon --inspect-brk=0.0.0.0 --ext js --legacy-watch app/index.js",
    "start:dev": "nodemon -r dotenv/config --ext js,gql app/index.js",
    "start:watch": "nodemon --inspect=0.0.0.0 --ext js --legacy-watch app/index.js",
    "test:local": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand --setupFiles dotenv/config",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --runInBand --coverage"
  },
  "author": "Defra",
  "contributors": [],
  "license": "OGL-UK-3.0",
  "dependencies": {
    "@apollo/datasource-rest": "^6.2.2",
    "@apollo/server": "4.9.4",
    "@as-integrations/hapi": "2.0.1",
    "@faker-js/faker": "8.2.0",
    "@graphql-tools/load-files": "7.0.0",
    "@graphql-tools/merge": "9.0.0",
    "@graphql-tools/mock": "9.0.0",
    "@graphql-tools/schema": "10.0.0",
    "@hapi/hapi": "21.3.2",
    "@hapipal/hecks": "^3.0.0",
    "@mocks-server/core": "^4.0.2",
    "applicationinsights": "2.8.0",
    "graphql": "16.8.1",
    "https-proxy-agent": "^7.0.2",
    "tough-cookie": "^4.1.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@graphql-eslint/eslint-plugin": "3.20.1",
    "dotenv": "^16.3.1",
    "eslint": "8.52.0",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "nodemon": "3.0.1",
    "prettier": "3.0.3",
    "sinon": "^17.0.1",
    "standard": "17.1.0"
  },
  "standard": {
    "globals": [
      "describe",
      "beforeEach",
      "expect",
      "test",
      "afterEach",
      "jest",
      "beforeAll",
      "afterAll",
      "it"
    ]
  },
  "nodemonConfig": {
    "ignore": [
      "**/test-output/**"
    ]
  },
  "overrides": {
    "latest-version": {
      "got": "11.8.5"
    },
    "@hapipal/hecks": {
      "@hapi/hapi": "^21.3.2"
    }
  }
}
